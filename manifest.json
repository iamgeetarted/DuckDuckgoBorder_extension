{
  "manifest_version": 2,
  "name": "DuckDuckGo Border",
  "version": "1.0",
  "description": "Adds a red border to any DuckDuckGo site.",
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["*://duckduckgo.com/*", "*://www.duckduckgo.com/*"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  }
}
